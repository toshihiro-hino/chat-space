.main
    .group-info
        .group-info__left-box
            .group-info__left-box__group-name
                = @group.name
            .group-info__left-box__member-name
                Member :  
                = @group.users.pluck(:name).join(' , ')
        =link_to edit_group_path(@group) do
            %p.group-info__edit-text Edit
                
    .messages
        = render @messages
        
    .form
        = form_for [@group, @message] do |f|
            = f.text_field :content, class: 'new_message__message', placeholder: 'type a message'
            .new_message__mask
                = f.label :image, class: 'new_message__mask__image' do
                    = icon('fas', 'image', class: 'icon')
                    = f.file_field :image, class: 'hidden'
            = f.submit 'Send', class: 'new_message__submit'